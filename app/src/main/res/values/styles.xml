<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="StartTheme" parent="android:Theme">
        <item name="android:windowBackground">@drawable/fw_startpage</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="HomeTextStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fw_12sp</item>
        <item name="android:textColor">@drawable/fw_tx_color</item>
        <item name="android:drawablePadding">@dimen/fw_5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/fw_10dp</item>
    </style>

</resources>